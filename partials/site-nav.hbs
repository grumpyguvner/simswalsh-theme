{{> "site-header"}}
<nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <div class="container">
        {{#is "home"}}
            <span>&nbsp;</span> {{!-- need to have something to force toggle button to float right (float-right class doesn't work) --}}
        {{else}}
            <div class="d-lg-none">
                <a class="navbar-brand align-middle" href="{{@site.url}}">
                    {{#if @site.logo}}
                        <img src="{{@site.logo}}" alt="{{@site.title}}" />
                    {{else}}
                        {{> "icons/logo"}}
                    {{/if}}
                    <span>{{@site.title}}</span>
                </a>
            </div>
        {{/is}}
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse">
            {{#if @site.navigation}}
                {{navigation}}
            {{/if}}
        </div>
    </div>
</nav>
